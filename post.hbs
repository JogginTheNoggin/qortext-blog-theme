{{!< default}} {{#post}} <article class="post-full {{post_class}}">

    <header
        class="relative pt-32 pb-16 md:pt-48 md:pb-24 px-6 overflow-hidden flex flex-col justify-center items-center">
        <!-- Background Effects -->
        <div class="absolute inset-0 grid-bg pointer-events-none opacity-50"></div>
        <div
            class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[300px] bg-brand-cyan/5 blur-[100px] rounded-full pointer-events-none opacity-40">
        </div>

        <div class="max-w-3xl mx-auto text-center relative z-10">
            <div
                class="flex items-center justify-center gap-3 mb-8 text-xs font-mono text-zinc-500 uppercase tracking-widest">
                <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
                {{#if tags}}
                <span class="text-zinc-400">/</span>
                <span class="text-brand-cyan">{{primary_tag.name}}</span>
                {{/if}}
            </div>

            <h1 class="text-4xl md:text-5xl font-bold text-zinc-900 tracking-tight leading-[1.15] mb-8">
                {{title}}
            </h1>

            {{#if custom_excerpt}}
            <p class="text-lg md:text-xl text-zinc-500 leading-relaxed font-light">
                {{custom_excerpt}}
            </p>
            {{/if}}
        </div>
    </header>

    {{#if feature_image}}
    <figure class="max-w-4xl mx-auto px-6 mb-20">
        <img srcset="{{img_url feature_image size=" s"}} 300w, {{img_url feature_image size="m" }} 600w, {{img_url
            feature_image size="l" }} 1000w, {{img_url feature_image size="xl" }} 2000w"
            sizes="(min-width: 1400px) 1400px, 92vw" src="{{img_url feature_image size=" xl"}}" alt="{{title}}"
            class="w-full h-auto rounded shadow-2xl border border-zinc-200" />
        {{#if feature_image_caption}}
        <figcaption class="text-center text-xs text-zinc-500 mt-4 font-mono">{{feature_image_caption}}</figcaption>
        {{/if}}
    </figure>
    {{/if}}

    <!-- Content using Tailwind Typography -->
    <section class="max-w-2xl mx-auto px-6 pb-24">
        <div
            class="prose prose-zinc prose-lg max-w-none 
            prose-headings:font-bold prose-headings:tracking-tight prose-headings:text-zinc-900 
            prose-p:text-zinc-600 prose-p:leading-8 
            prose-a:text-brand-cyan prose-a:no-underline hover:prose-a:text-brand-cyan/80 
            prose-strong:text-zinc-900 prose-strong:font-semibold
            prose-code:text-brand-cyan prose-code:bg-zinc-100 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:font-normal prose-code:before:content-none prose-code:after:content-none
            prose-pre:bg-zinc-900 prose-pre:border prose-pre:border-zinc-800 prose-pre:text-zinc-100
            prose-blockquote:border-brand-cyan prose-blockquote:bg-zinc-50 prose-blockquote:py-2 prose-blockquote:px-6 prose-blockquote:not-italic prose-blockquote:text-zinc-600">
            {{content}}
        </div>
    </section>

    </article>
    {{/post}}