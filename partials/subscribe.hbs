<section class="py-24 bg-gradient-to-b from-white via-zinc-100 to-zinc-200 relative overflow-hidden border-t border-zinc-200">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[300px] bg-brand-cyan/5 blur-[100px] rounded-full pointer-events-none">
    </div>

    <div class="max-w-4xl mx-auto px-6 relative z-10 text-center">
        <h2 class="text-3xl md:text-5xl font-bold text-zinc-900 mb-6 tracking-tight">Stay ahead of the curve.</h2>
        <p class="text-zinc-500 text-lg mb-10 max-w-xl mx-auto font-light">
            Get the latest insights on micro-intelligence and agentic workflows delivered straight to your inbox.
        </p>

        {{!-- Added 'group' class to the form to control children state --}}
        <form data-members-form="subscribe" class="max-w-lg mx-auto group">
            
            {{!-- Wrapper div to keep input and button side-by-side --}}
            <div class="flex flex-col sm:flex-row gap-4">
                <div class="flex-grow relative">
                    <input 
                        data-members-email 
                        type="email" 
                        placeholder="enter your email" 
                        required="true"
                        class="w-full px-5 py-4 bg-white border border-zinc-200 rounded-lg text-zinc-900 placeholder-zinc-400 focus:outline-none focus:border-brand-cyan focus:ring-1 focus:ring-brand-cyan transition-all shadow-sm" 
                    />
                </div>
                <button type="submit"
                    class="px-8 py-4 bg-brand-cyan text-white font-bold rounded-lg hover:bg-[#00d2ff] transition-all shadow-[0_4px_14px_0_rgba(6,182,212,0.39)] hover:shadow-[0_6px_20px_rgba(6,182,212,0.23)] hover:-translate-y-[1px]">
                    <span class="group-[.loading]:hidden">Subscribe</span>
                    <span class="hidden group-[.loading]:inline-block">Processing...</span>
                </button>
            </div>

            {{!-- Success Message: hidden by default, visible when form has 'success' class --}}
            <div class="hidden group-[.success]:block mt-4 text-brand-cyan font-medium bg-green-50 p-3 rounded-lg border border-green-100">
                Great! Check your inbox and click the link to confirm your subscription.
            </div>

            {{!-- Error Message: hidden by default, visible when form has 'error' class --}}
            {{!-- data-members-error allows Ghost to inject the specific error text from the server --}}
            <div data-members-error class="hidden group-[.error]:block mt-4 text-red-500 font-medium bg-red-50 p-3 rounded-lg border border-red-100">
                Please enter a valid email address!
            </div>

        </form>
    </div>
</section>
